<%= form_with model: @gig do |form| %>
  
  <div>
    <%= form.label :title %><br>
    <%= form.text_field :title %>
    <% gig.errors.full_messages_for(:title).each do |message| %>
      #<div><%= message %></div>
    <% end %>
  </div>

  <div>
    <%= form.label :description %><br>
    <%= form.text_area :description %>
    <% gig.errors.full_messages_for(:description).each do |message| %>
      #<div><%= message %></div>
    <% end %>
  </div>

  <div>
    <%= form.label :currency %><br>
    <%= form.select :currency, [['BTC', 'BTC'], ['DOGE', 'DOGE'], ['ETH', 'ETH']] %><br>
  </div>

  <div>
    <%= form.label :cost %><br>
    <%= form.number_field :cost, step: 'any' %><br>
    <% gig.errors.full_messages_for(:cost).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div>
    <%= form.label :skill %><br>
    <%= form.text_field :skill %>
    <% gig.errors.full_messages_for(:skill).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div>
    <%= form.label :categories %><br>
    <%= form.text_field :categories %><br>
    <% gig.errors.full_messages_for(:categories).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>


  <div>
    <%= form.submit %><br>
  </div>
<% end %>
