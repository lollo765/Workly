<head>
  <%= stylesheet_link_tag 'workers.css' %>
</head>

<body>
  <!--==========Navbar==========-->
    <nav>
      <!--=====Logo=====-->
      <div class="logo">
        <a href="/">
          <%= image_tag('Workly_Logo.png', class:"logo", height: "120px") %>
        </a>
      </div>
      <!--=====Schede=====-->
      <ul id="navbar">
        <li><%= link_to "Home", home_pages_path%></li>
        <li><%= link_to "Workers", workers_path, class: "active"%></li>
        <li><%= link_to "Gigs", gigs_path%></li>
        <li><%= link_to "Lavori", lavoros_path%></li>
        <li>
            <% if !user_signed_in? %>
              <div class="loginbox">
                <%= link_to 'Login', new_user_session_path, :method => :get, class: "btn btn-outline-light btn-lg"%>
              </div>
            <% end %>

            <% if user_signed_in? %>
              <div class="loginbox">
                <a href="/user_pages/<%= current_user.id %>" class="btn btn-outline-light btn-lg" >User Page</a>
              </div>
            <% end %>

        </li>
      </ul>
    </nav>
    <!--==========Fine Navbar==========-->

  <br>

  <div id="griglia-filtri">

    <div class="search-worker">

   <%= form_tag gigs_path, method: 'get' do %>
     <%= text_field_tag :search, params[:search], placeholder:'Cerca...', autocomplete: 'off' %>
     <%= button_tag (fa_icon "magnifying-glass", text: "Cerca "), class: "button" %>
   <% end %>


    </div>

    <div class="search-skill-worker">
  
    <%= form_tag gigs_path, method: 'get' do %>
      <%= text_field_tag :search, params[:skill], placeholder:'Cerca una skill...', autocomplete: 'off' %>
      <%= button_tag (fa_icon "magnifying-glass", text: "Cerca "), class: "button" %>
    <% end %>

    </div>

    <div class="search-category-worker">
     
    <%= form_tag gigs_path, method: 'get' do %>
      <%= select_tag :categories, options_for_select(["Design e Visual Art", "Programmazione", "Economia", "Musica e Videomaking" ], "Design e Visual Art") %>
      <%= button_tag (fa_icon "filter", text: "Filtra"), class: "button" %>
    <% end %>

    </div>


    <% if user_signed_in? %>
      <%= link_to new_gig_path do %>
        <i class="fa-solid fa-plus"> </i> Crea Gig
      <% end %>
    <% end %>

    <% if !user_signed_in? %>
      <%= link_to new_user_session_path do %>
        <i class="fa-solid fa-plus"> </i> Crea Gig
      <% end %>
    <% end %>


  </div>
  <br>
  <hr>
  <div id="griglia-workers">

      <% @gigs.each do |gig|%>
        <div>
          <% if gig.categories == 'Design e Visual Art'%>
              <% image = "Design.jpg" %>
          <% end %>
          <% if gig.categories == 'Programmazione'%>
              <% image = "Progr.jpg" %>
          <% end %>
          <% if gig.categories == 'Economia'%>
              <% image = "Econ.jpg" %>
          <% end %>
          <% if gig.categories == 'Musica e Videomaking'%>
              <% image = 'MusVid.png' %>
          <% end %>
          <%= image_tag(image, width: "175px", height: "100px") %>
          <br>
          <%= gig.title%>
          <br>
          <a class="btn btn-primary" href="/gigs/<%= gig.id%>">Dettagli</a>
        </div>
      <% end %>

  </div>

</body>