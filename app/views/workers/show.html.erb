<head>
    <%= stylesheet_link_tag 'user_page.css' %>
</head>

<body>



    <div class="container">
        <div class="main">
            <div class="row">
                <div class="col-md-4 mt-1">
                    <div class="card text-center sidebar">
                        <div class="card-body">
                            <% if @user.img == ""%>
                                <% @user.img = "avatar-user.png" %>
                            <% end %>
                            <%= image_tag(@user.img, width: "175px", height: "175px", class: "rounded-circle") %>
                            <div class="mt-3">
                                <p> <%= @user.name %> </p>
                                <% if current_user && ((@user.email == current_user.email)) %>
                                    <%= link_to 'Logout', destroy_user_session_path, :method => :delete, class: "btn btn-danger"%>
                                    <br>
                                    <br>
                                    <%= link_to "Change your password", edit_user_registration_path, class: "btn btn-danger" %>
                                    <br>
                                    <br>
                                    <%= button_to "Edit", edit_user_page_path, :method => :get, class: "btn btn-danger" %>
                                <% end %>
                                <br>
                                <% if current_user && ((@user.email == current_user.email) || (current_user.admin == true)) %>
                                    <%= link_to "Delete Worker",  worker_path, data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}, class: "btn btn-danger" %>
                                <% end %>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-8 mt-1">
                    <div class="card mb-3 content">
                        <h1 class="m-3 pt-3">About</h1>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-3">
                                    <h5>Name</h5>
                                </div>
                                <div class="col-md-9 text-secondary">
                                    <%= @user.name %>
                                </div>
                            </div>
                            <hr>
                            <div class="row">
                                <div class="col-md-3">
                                    <h5>Email</h5>
                                </div>
                                <div class="col-md-9 text-secondary">
                                    <%= @user.email %>
                                </div>
                            </div>
                            <hr>
                            <div class="row">
                                <div class="col-md-3">
                                    <h5>Address</h5>
                                </div>
                                <div class="col-md-9 text-secondary">
                                    <%= @user.address %>
                                </div>
                            </div>
                            <hr>
                            <div class="row">
                                <div class="col-md-3">
                                    <h5>Skills</h5>
                                </div>
                                <div class="col-md-9 text-secondary">
                                    <%= @user.skill %>
                                </div>
                            </div>
                            <hr>
                            <div class="row">
                                <div class="col-md-3">
                                    <h5>Category</h5>
                                </div>
                                <div class="col-md-9 text-secondary">
                                    <%= @user.category %>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="card mb-3 content">
                        <h1 class="m-3">Gigs</h1>
                        <div class="card-body">
                            <% @gigs.each do |gig|%>
                                <div class="row">
                                    <div class="col-md-3">
                                        <h5>Title</h5>
                                    </div>
                                    <div class="col-md-5 text-secondary">
                                        <%= gig.title %>
                                    </div>
                                    <%= link_to "Dettagli", gig, class: "col-md-2 btn btn-primary" %>
                                </div>
                                <hr>
                            <% end %>
                        </div>
                    </div>
                    <div class="card mb-3 content">
                        <h1 class="m-3">Jobs</h1>
                        <div class="card-body">
                            <% @lavoros.each do |lavoro|%>
                                <div class="row">
                                    <div class="col-md-3">
                                        <h5>Title</h5>
                                    </div>
                                    <div class="col-md-5 text-secondary">
                                        <%= lavoro.title %>
                                    </div>
                                    
                                </div>
                                <hr>
                            <% end %>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</body>