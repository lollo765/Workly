<%= form_with model: @contact do |f| %>
  
  <div>
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>

  <div>
    <%= f.label :email %><br>
    <%= f.text_field :email %>
  </div>

  <div>
    <%= f.label :message %><br>
    <%= f.text_area :message %>
  </div>

  <div>
    <%= f.submit %>
  </div>

<% end %>