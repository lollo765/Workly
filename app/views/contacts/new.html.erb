<h1> Assistenza </h1>

<%= form_with model: @contact do |f| %>
  
  <div>
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>

  <div>
    <%= f.label :email %><br>
    <%= f.text_field :email %>
  </div>

  <div>
    <%= f.label :message %><br>
    <%= f.text_area :message %>
  </div>

  <br>

  <div>
    <%= f.submit %>
  </div>

  <br>

  <%= link_to root_path do %>
    <i class="fa-solid fa-house"></i> Torna alla home
  <% end %>

<% end %>