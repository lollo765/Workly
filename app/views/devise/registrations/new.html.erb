  <div class="center">
    <br>
    <h1>Registrati!</h1>
    <div id="form">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="row">

          <div class="col">
            <div class="txt_field">
              <%= f.label :Username %>
              <br />
              <%= f.text_field :name, autofocus: true, :required => true %>
            </div>
          </div>

          <div class="col">
            <div class="txt_field">
              <%= f.label :email %><br />
              <%= f.email_field :email, autocomplete: "email" %>
            </div>
          </div>

        </div>

        <div class="row">

          <div class="col">
            <div class="txt_field">
              <%= f.label :Address %><br />
              <%= f.text_field :address, :required => true %>
            </div>
          </div>

          <div class="col">
            <div class="txt_field">
                <label>Link per l'immagine</label>
                <br />
                <%= f.text_field :img%>
            </div>
          </div>

        </div>

        <div class="field">
            <%= f.label :Skills %><br />
            <br>
            <div class="row">
              <div class="col-md-4">

                <input type="checkbox" value= "WordPress-Developer, " id="1">
                <label for="1">WordPress-Developer</label>

              </div>

              <div class="col-md-4">
              
                <input type="checkbox" value= "Shopify-Developer, " id="2">
                <label for="2">Shopify-Developer</label>

              </div>

            

              <div class="col-md-4">

                <input type="checkbox" value= "Wlx-Developer, " id="3">
                <label for="3">Wlx-Developer</label>

              </div>

            </div>

            <div class="row">

              <div class="col-md-4">

                <input type="checkbox" value= "Android-Developer, " id="4">
                <label for="4">Android-Developer</label>

              </div>

              <div class="col-md-4">

                <input type="checkbox" value= "IOS-Developer, " id="5">
                <label for="5">IOS-Developer</label>

              </div>

              <div class="col-md-4">

                <input type="checkbox" value= "Python-Developer, " id="6">
                <label for="6">Python-Developer</label>

              </div>

            </div>

            <div class="row">

              <div class="col-md-4">

                <input type="checkbox" value= "JavaScript-Developer, " id="7">
                <label for="7">JavaScript-Developer</label>

              </div>

              <div class="col-md-4">

                <input type="checkbox" value= "HTML-CSS-Developer, " id="8">
                <label for="8">HTML-CSS-Developer</label>

              </div>

            </div>
            
            <%= f.hidden_field :skill, id: "skill"%>

        </div>

        <div class="select_field">
            <label>Categoria</label>
            <br />
            <br>
            <%= f.select :category, [['Avvocato', 'Avvocato'], ['Ingegnere', 'Ingegnere'], ['Architetto', 'Architetto']], { :include_blank => '-- Selezionane Una --' }, :required => true %>
        </div>

        <div class="row">

          <div class="col">
            <div class="txt_field">
              <%= f.label :password %>
              <% if @minimum_password_length %>
              <em>(minimo <%= @minimum_password_length %> caratteri)</em>
              <% end %><br />
              <%= f.password_field :password, autocomplete: "new-password" %>
            </div>
          </div>

          <div class="col">
            <div class="txt_field">
              <%= f.label :password_confirmation %><br />
              <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
            </div>
          </div>

        </div>

        <div class="actions">
          <%= f.submit "Registrati" %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>

