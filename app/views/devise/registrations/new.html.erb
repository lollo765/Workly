<head>
  <%= stylesheet_link_tag 'registrationNew.css' %>
</head>

<body>
  <div class="center">
    <br>
    <h1>Sign up</h1>
    <div id="form">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="row">

          <div class="col">
            <div class="txt_field">
              <%= f.label :Username %><br />
              <%= f.text_field :name, autofocus: true, :required => true %>
            </div>
          </div>

          <div class="col">
            <div class="txt_field">
              <%= f.label :email %><br />
              <%= f.email_field :email, autocomplete: "email" %>
            </div>
          </div>

        </div>

        <div class="row">

          <div class="col">
            <div class="txt_field">
              <%= f.label :Address %><br />
              <%= f.text_field :address, :required => true %>
            </div>
          </div>

          <div class="col">
            <div class="txt_field">
                <%= f.label :Image %><br />
                <%= f.text_field :img%>
            </div>
          </div>

        </div>

        <div class="field">
            <%= f.label :Skills %><br />
            <br>
            <%= f.text_area :skill, :required => true %>
        </div>

        <div class="select_field">
            <%= f.label :Category %><br />
            <br>
            <%= f.select :category, [['Avvocato', 'Avvocato'], ['Ingegnere', 'Ingegnere'], ['Architetto', 'Architetto']], { :include_blank => '-- Select One --' }, :required => true %>
        </div>

        <div class="row">

          <div class="col">
            <div class="txt_field">
              <%= f.label :password %>
              <% if @minimum_password_length %>
              <em>(<%= @minimum_password_length %> characters minimum)</em>
              <% end %><br />
              <%= f.password_field :password, autocomplete: "new-password" %>
            </div>
          </div>

          <div class="col">
            <div class="txt_field">
              <%= f.label :password_confirmation %><br />
              <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
            </div>
          </div>

        </div>

        <div class="actions">
          <%= f.submit "Sign up" %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</body>