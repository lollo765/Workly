<head>
  <%= stylesheet_link_tag 'login.css' %>
</head>

<body>
  <div class="center">
    <br>
    <h1>Login</h1>
    <div id="form">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="txt_field">
          <%= f.email_field :email, placeholder: "Email", autofocus: true, autocomplete: "email"%>
        </div>

        <div class="txt_field">
          <%= f.password_field :password, placeholder: "Password", autocomplete: "current-password"%>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="field">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        <% end %>

        <div class="actions">
          <%= f.submit "Log in" %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</body>